<%- include("../partials/header") %>

<h1 class="text-center">Edit blog</h1>
<div class="container" style="max-width: 400px; margin: 30px auto;">
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="title" value="<%= blog.title %>" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" value="<%= blog.image %>" required>
        </div>
        <div class="form-group">
            <select id="category" class="form-control" name="category" required>
                <option value="<%= blog.category %>"><%= blog.category %></option>
            </select>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="content" rows="6" required><%= blog.content %></textarea> 
        </div>
        <input class="btn btn-outline-primary btn-block" type="submit">
    </form>
</div>